// Prisma Schema for Virtual Mail Application
// This extends the default NextAuth schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// NextAuth.js Models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// User Model (extended for Virtual Mail)
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          Role      @default(CUSTOMER)
  phone         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  accounts      Account[]
  sessions      Session[]
  mailItems     MailItem[]
  requests      Request[]
  subscription  Subscription?
  transactions  Transaction[]
}

enum Role {
  ADMIN
  STAFF
  CUSTOMER
}

// Mail Item Model
model MailItem {
  id            String      @id @default(cuid())
  userId        String
  sender        String
  description   String?
  type          MailType    @default(LETTER)
  status        MailStatus  @default(RECEIVED)
  receivedAt    DateTime    @default(now())
  processedAt   DateTime?
  imageUrl      String?
  scannedUrl    String?
  weight        Float?      // in ounces
  dimensions    String?     // e.g., "6x9x1"
  trackingNumber String?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  // Relations
  user          User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  requests      Request[]

  @@index([userId])
  @@index([status])
}

enum MailType {
  LETTER
  PACKAGE
  MAGAZINE
  LARGE_ENVELOPE
}

enum MailStatus {
  RECEIVED
  SCANNED
  FORWARDED
  SHREDDED
  PICKED_UP
  STORED
  ARCHIVED
}

// Request Model (for scan, shred, forward, pickup requests)
model Request {
  id            String        @id @default(cuid())
  userId        String
  mailItemId    String
  type          RequestType
  status        RequestStatus @default(PENDING)

  // Forwarding specific fields
  forwardAddress String?
  shippingMethod String?
  trackingNumber String?

  // Pricing fields
  price         Float?
  paidAt        DateTime?

  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  processedAt   DateTime?
  processedBy   String?       // Staff user ID who processed

  // Relations
  user          User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  mailItem      MailItem      @relation(fields: [mailItemId], references: [id], onDelete: Cascade)
  transaction   Transaction?

  @@index([userId])
  @@index([status])
  @@index([type])
}

enum RequestType {
  SCAN
  SHRED
  FORWARD
  PICKUP
}

enum RequestStatus {
  PENDING
  PROCESSING
  COMPLETED
  CANCELLED
}

// Subscription/Plan Model
model Plan {
  id            String        @id @default(cuid())
  name          String        @unique
  description   String?
  monthlyPrice  Float
  itemsIncluded Int           // Number of mail items included per month
  features      String[]      // List of features
  freePickup    Boolean       @default(false)
  active        Boolean       @default(true)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  subscriptions Subscription[]
}

model Subscription {
  id            String        @id @default(cuid())
  userId        String        @unique
  planId        String
  status        SubStatus     @default(ACTIVE)
  currentPeriodStart DateTime
  currentPeriodEnd   DateTime
  itemsUsed     Int           @default(0)
  stripeCustomerId   String?
  stripeSubscriptionId String?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  user          User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  plan          Plan          @relation(fields: [planId], references: [id])

  @@index([planId])
}

enum SubStatus {
  ACTIVE
  PAST_DUE
  CANCELLED
  PAUSED
}

// Pricing Configuration Model
model PricingConfig {
  id            String    @id @default(cuid())
  key           String    @unique
  value         Float
  description   String?
  updatedAt     DateTime  @updatedAt
  updatedBy     String?   // Admin user who updated
}

// Transaction Model (for billing)
model Transaction {
  id            String        @id @default(cuid())
  userId        String
  requestId     String?       @unique
  type          TxnType
  amount        Float
  description   String?
  status        TxnStatus     @default(PENDING)
  stripePaymentIntentId String?
  createdAt     DateTime      @default(now())

  user          User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  request       Request?      @relation(fields: [requestId], references: [id])

  @@index([userId])
  @@index([status])
}

enum TxnType {
  SUBSCRIPTION
  SCAN
  SHRED
  FORWARD
  PICKUP
  STORAGE
  REFUND
}

enum TxnStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}
