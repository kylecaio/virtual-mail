import { getServerSession } from 'next-auth';
import { authOptions } from '@/lib/auth';
import { db } from '@/lib/db';
import { notFound } from 'next/navigation';
import Link from 'next/link';
import { RequestActions } from './RequestActions';

async function getMailItem(id: string, userId: string) {
    const item = await db.mailItem.findUnique({ where: { id }, include: { requests: true } });
    if (!item || item.userId !== userId) return null;
    return item;
}

export default async function MailDetailPage({ params }: { params: { id: string } }) {
    const session = await getServerSession(authOptions);
    if (!session?.user?.id) return null;
    const mailItem = await getMailItem(params.id, session.user.id);
    if (!mailItem) notFound();

  return (
        <div>
              <div className="mb-6">
                      <Link href="/mail" className="text-blue-600 hover:text-blue-500 text-sm">Back to Inbox</Link>Link>
              </div>div>
              <div className="bg-white shadow rounded-lg overflow-hidden">
                      <div className="px-6 py-4 border-b border-gray-200">
                                <h1 className="text-xl font-semibold text-gray-900">Mail Details</h1>h1>
                      </div>div>
                      <div className="px-6 py-4 space-y-4">
                                <div className="grid grid-cols-2 gap-4">
                                            <div><span className="text-sm text-gray-500">Sender:</span>span><p className="font-medium">{mailItem.sender || 'Unknown'}</p>p></div>div>
                                            <div><span className="text-sm text-gray-500">Received:</span>span><p className="font-medium">{new Date(mailItem.receivedAt).toLocaleDateString()}</p>p></div>div>
                                            <div><span className="text-sm text-gray-500">Type:</span>span><p className="font-medium">{mailItem.type}</p>p></div>div>
                                            <div><span className="text-sm text-gray-500">Status:</span>span><span className="px-2 py-1 text-xs rounded-full bg-blue-100 text-blue-800">{mailItem.status}</span>span></div>div>
                                </div>div>
                        {mailItem.envelopeImageUrl && <img src={mailItem.envelopeImageUrl} alt="Envelope" className="mt-4 max-w-md rounded border" />}
                      </div>div>
                      <div className="px-6 py-4 bg-gray-50 border-t border-gray-200">
                                <h2 className="text-lg font-medium text-gray-900 mb-4">Actions</h2>h2>
                                <RequestActions mailItemId={mailItem.id} status={mailItem.status} />
                      </div>div>
              </div>div>
        </div>div>
      );
}</div>
